<head>
   <link rel="stylesheet" 
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="
    sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"   crossorigin="anonymous">
</head>

<div class="container mb-3">

  <style>
  .carousel-inner {
  width:640px;
  height:360px;
}</style>

<p id="notice"> <%= notice %></p>



<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Date</th>
      <th>Time</th>
      <th>Winning team</th>
      <th>Description</th>
      <th>Prize</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

       <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner">
            <% @events.event_images.each_with_index do |image, i| %>
            <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
              <%= image_tag image.url, class: "d-block w-100" %>
            </div>
            <%end%>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <tr>
          <td><%= @events.topic %></td>
          <td><%= @events.date %></td>
          <td><%= @events.time %></td>
          <td><%= @events.winning_team %></td>
          <td><%= @events.description %></td>
          <td><%= @events.prize %></td>
          <% if current_user.super_admin?%>
          <td><%= link_to 'Edit', edit_event_path(@events.id), class: "btn btn-outline-primary mr-3"%></td>
          <td><%= link_to 'Destroy', @events, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
<%end%>
    </tbody>
  </table>

  <br>

  <%= link_to 'Join the challange', new_event_team_path(@event), class: "btn btn-outline-info" %>
  <%= link_to "View Teams", event_teams_path(@event), class: "btn btn-outline-secondary" %>
</div>