<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Date of birth</th>
      <th>About</th>
      <th>User avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if current_user.id == user.id || current_user.super_admin? %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.about %></td>
        <td><%= image_tag user.avatar.thumb.to_s %></td>
        <td><%= link_to 'Current Challenge', event_teams_path(user.team.event.id)%></td> 
        <td><%= link_to 'View Account', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

