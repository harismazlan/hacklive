                    <center>
                    <figcaption> 
                        <%= link_to "Clover Event", "events/2", method: "get", class: 'challengetitle' %>
                    </figcaption> 
                </figure>
            </item>

            <item tc-rotation="180" style="transform: rotateY(180deg) translateZ(500px)">
