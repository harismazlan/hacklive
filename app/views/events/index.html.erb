                </figure> 
            </item>
            
            <item tc-rotation="60" style="transform: rotateY(60deg)  translateZ(500px)">
                <figure>  
                    <%= image_tag "creative/portfolio/CapitalOneHackathon3.jpg", size: "700x150"%> </a>
                    <center>
                    <figcaption> 
                        <%= link_to "Wordplay", "events/6", method: "get", class: 'challengetitle' %>
                    </figcaption>
                </figure> 
            </item>                                     
        </div>
        <nav class="tc-btn-container">
            <div class="tc-next">NEXT</div>
            <div class="tc-prev">PREV</div>
        </nav>
    </div>

    <script src="//code.jquery.com/jquery-2.2.1.min.js"></script>
</body>

